<Alloy>
	<Window id="sdkmgrwin" class="titleClass" title="SDK Manager APIs">
		<ListView id="clientsdklist" defaultItemTemplate="sdkmgrtemplate" onItemclick="getListItemValue">
			<Templates>
				<ItemTemplate name="sdkmgrtemplate">
					<View id='listitem'>
						<Label id="text" bindId="label" class="itemlabels"></Label>
						<Label id="subtext" bindId="value" class="itemvalues"></Label>						
					</View>
				</ItemTemplate>
			</Templates>
			<ListSection id="sdklistsection" dataCollection="sdkmanagerlist">
				<ListItem label:text="{label}" value:text="{value}"></ListItem>
			</ListSection>
		</ListView>
	</Window>
</Alloy>